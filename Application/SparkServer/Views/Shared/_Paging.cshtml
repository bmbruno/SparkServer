@model SparkServer.Models.Paging

@if (Model.PageCount.HasValue && Model.PageCount > 1)
{
    <div>

        @if (Model.CurrentPage > 1)
        {
            <a href="?page=@(Model.CurrentPage - 1)"><i class="fa fa-chevron-left" aria-hidden="true"></i> Last</a>
        }
        else
        {
            <a href="#"><i class="fa fa-chevron-left" aria-hidden="true"></i> Disabled</a>
        }

        @if (Model.CurrentPage < Model.PageCount)
        {
            <a href="?page=@(Model.CurrentPage + 1)">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
        }
        else
        {
            <a href="#">Disabled <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
        }

    </div>
}