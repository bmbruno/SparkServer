@model SparkServer.Models.Paging

@if (Model.PageCount.HasValue && Model.PageCount > 1)
{
    <div class="paging">

        <div class="info">
            Page @Model.CurrentPage of @Model.PageCount
        </div>

        @if (Model.CurrentPage > 1)
        {
            <a href="?page=@(Model.CurrentPage - 1)" class="btn previous"><i class="fa fa-chevron-left" aria-hidden="true"></i> Previous</a>
        }

        @if (Model.CurrentPage < Model.PageCount)
        {
            <a href="?page=@(Model.CurrentPage + 1)" class="btn next">Next <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
        }

    </div>
}