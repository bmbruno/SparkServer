@model SparkServer.ViewModels.BaseViewModel

<!DOCTYPE html>

<html>
    <head>
        <title>@ViewBag.Title - Sitecore Spark</title>

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <meta name="description" content="Sitecore 101 for .NET Developers">
        <meta name="author" content="Brandon Bruno">

        <!--[if lt IE 9]>
            @Scripts.Render("~/bundles/html5shiv")
        <![endif]-->

        @Styles.Render("~/Content/css")

        <link rel="shortcut icon" href="favicon.ico" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

        <!--[if lt IE 9]>
            @Styles.Render("~/Content/ie")
        <![endif]-->
    </head>

    <body>

        <div class="content">

            <header>
                <a class="mobile-menu-toggle">Menu</a>
                <img src="~/Content/Images/logo_title_alt.png" alt="Sitecore Spark Logo" class="logo" />
            </header>

            <nav>
                <ul class="cf">
                    <li><a href="/" @if (Model.MenuSelection == SparkServer.Application.Enum.MainMenu.Home) { @Html.Raw("class='active'") } >Home</a></li>
                    <li><a class="disabled" href="#" @if (Model.MenuSelection == SparkServer.Application.Enum.MainMenu.Category) { @Html.Raw("class='active'") }>Categories</a></li>
                    <li><a class="disabled" href="#" @if (Model.MenuSelection == SparkServer.Application.Enum.MainMenu.Mentoring) { @Html.Raw("class='active'") }>Mentoring</a></li>
                    <li><a class="disabled" href="#" @if (Model.MenuSelection == SparkServer.Application.Enum.MainMenu.About) { @Html.Raw("class='active'") }>About</a></li>
                    <li><a href="/blog" @if (Model.MenuSelection == SparkServer.Application.Enum.MainMenu.Blog) { @Html.Raw("class='active'") }>Blog</a></li>
                </ul>
            </nav>

            <div class="container cf">

                @RenderBody()

            </div>

            <footer class="page">
                <p>&copy; @DateTime.Today.Year.ToString() Sitecore Spark. All rights reserved.</p>
                <p>Questions? Comments? <a href="mailto:bmbruno@gmail.com">bmbruno@gmail.com</a></p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/scripts")

        @RenderSection("PageScripts", required: false)

    </body>
</html>