@model SparkServer.ViewModels.BaseViewModel

<!DOCTYPE html>

<html lang="en-us">
    <head>
        <title>@ViewBag.Title - Sitecore Spark</title>

        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <meta name="description" content="Sitecore 101 for .NET Developers - Practical Sitecore by Example">
        <meta name="author" content="Brandon Bruno">

        @RenderSection("PageMetadata", required: false)

        <!--[if lt IE 9]>
            @Scripts.Render("~/bundles/html5shiv")
        <![endif]-->

        @Styles.Render("~/Content/css")

        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">

        <!--[if lt IE 9]>
            @Styles.Render("~/Content/ie")
        <![endif]-->
    </head>

    <body>

        <div class="content">

            <header class="cf">
                
                <div class="logo-wrapper">
                    <a href="/">
                        <img class="logo" src="~/Content/Images/logo2022.png" alt="Sitecore Spark Logo" />
                    </a>
                </div>

                <div class="byline-wrapper">
                    <p style="">An Independent Sitecore &amp; Technology Blog</p>
                </div>

            </header>

            <div class="container cf">

                @if (TempData["Success"] != null)
                {
                    <div class="status-message success">
                        @TempData["Success"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="status-message error">
                        @TempData["Error"]
                    </div>
                }

                @RenderBody()

            </div>

        </div>

        <footer class="page">
            <div class="content">
                <ul class="grid two-up cf" style="margin-bottom: 0;">
                    <li>
                        <p><i class="fa fa-twitter" aria-hidden="true"></i> <a href="https://www.twitter.com/brandonmbruno" target="_blank">@@BrandonMBruno</a></p>
                        <p><i class="fa fa-slack" aria-hidden="true"></i> <a href="https://sitecorechat.slack.com/" target="_blank">@@brandon.bruno</a></p>
                        <p><i class="fa fa-envelope" aria-hidden="true"></i> <a href="mailto:bmbruno+sitecorespark@gmail.com">bmbruno+sitecorespark@gmail.com</a></p>
                    </li>
                    <li>
                        <p>&copy; @DateTime.Today.Year.ToString() Sitecore Spark. All rights reserved.</p>
                        <p>Not affiliated with <a href="http://www.sitecore.com" target="_blank" style="font-weight: bold;">Sitecore Corporation A/S</a>. Sitecore&reg; is a registered U.S. trademark.</p>
                    </li>
                </ul>
            </div>

        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/scripts")

        @RenderSection("PageScripts", required: false)

        <script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-82475706-1', 'auto');
			ga('send', 'pageview');
        </script>

    </body>
</html>